<%- include('./partials/header') %>
<div class="w-full h-screen flex flex-col md:flex-row items-start px-4 md:px-10 py-20 font-sans">
    <% if(success.length > 0) { %>
        <div class="absolute top-10 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
               <%= success  %>
           </span>
       </div>
   <% }  %>

    <div class="w-full md:w-[20%] flex h-auto md:h-screen flex-col items-start">
        <div class="flex items-center gap-2">
            <h3>sort by</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col mt-20">
            <a class="block w-fit mb-2" href="">New Collection</a>
            <a class="block w-fit mb-2" href="">All Products</a>
            <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>
        <div class="mt-32">
            <a class="block w-fit mb-2" href="">Filter by :</a>
            <a class="block w-fit mb-2" href="">Availability</a>
            <a class="block w-fit mb-2" href="">Discount</a>
        </div>
    </div>
    <div class="w-full md:w-[80%] flex flex-col gap-5 h-auto md:h-screen">
        <div class="flex flex-wrap items-start justify-start gap-4 md:pl-4">
            <% products.forEach((product) =>{ %>
                <div class="w-full sm:w-1/2 md:w-[23%]">
                    <div class="w-full h-52 flex items-center justify-center bg-[<%=product.bgcolor %>]">
                        <img class="h-full" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>
                    <div class="flex justify-between bg-[<%=product.panelcolor %>] items-center px-4 py-4 text-[<%=product.textcolor %>]">
                        <div>
                            <h3>
                               <%= product.name %>
                            </h3>
                            <h4>â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%= product._id %>">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
            <% })  %>
        </div>
    </div>
</div>
    <%- include('./partials/footer') %>