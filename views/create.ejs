<%- include('./partials/header') %>
            <div class="w-full h-screen flex px-20">
                <div class="w-full flex flex-col items-center justify-center h-screen ">
                    <h3 class="text-4xl mb-10">welcome to <span class="text-blue-400 font-semibold">Scatch</span></h3>
                    <div class="w-3/2 px-20  py-14  relative    bg-slate-400/30 ">
                        <h4 class="text-2xl mb-5">create your account</h4>
                        <form action="/users/register" method="post">
                            <input
                                class="bg-zinc-100 block w-full  outline-none px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="text" placeholder="Full Name" name="fullname">
                            <input
                                class="bg-zinc-100 block w-full outline-none px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="password" placeholder="Password" name="password">
                            <input class=" w-full px-5 outline-none rounded-md py-3 mt-2 bg-blue-500 text-white" type="submit"
                                value="Create My Account">
                        </form>
                        <div class="w-full text-center pr-[5rem]  absolute bottom-5">
                            <a href="/users" class="text-[1rem] font-[500]  ">Sign in</a>
                        </div>
                    </div>
                </div> 
              </div>  
 <%- include('./partials/footer') %>