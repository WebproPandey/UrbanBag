<%- include('./partials/header') %>

<% user.cart.forEach((item) => { %>
    <div class="w-full h-screen flex flex-col  md:h-fit md:flex-row items-start px-5 md:px-20 py-5 gap-5 md:gap-5 ">

        <div class="w-full md:w-[30%] rounded-md overflow-hidden ">
            <div class="w-full h-40 bg-[<%=item.bgcolor%>] flex justify-center items-center">
                <img class="h-full object-cover" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
            </div>
            <div class="w-full flex justify-between px-5 py-2 bg-[<%=item.panelcolor%>] ">
                <h3 class="text-lg md:text-2xl capitalize text-[<%=item.textcolor%>] "> <%= item.name %></h3>
                <div class="flex items-center gap-2">
                    <i class="w-5 h-5 md:w-7 md:h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <i class="w-5 h-5 md:w-7 md:h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-2 bg-[<%=item.panelcolor%>]">
                <h4 class="text-sm md:text-lg">Net Total</h4>
                <h2 class="text-sm md:text-lg">₹ <%= bill %></h2>
                <form action="/removefromcart/<%= item._id %>" method="POST">
                    <button type="submit" class="text-red-500">Delete</button>
                </form>
            </div>
        </div>
        
        <div class="w-full md:w-[70%] ">
            <h3 class="text-lg md:text-xl">Price Breakdown</h3>
            <div class="px-2 md:px-10 mt-2">
                <div class="flex gap-5 mt-2">
                    <h4 class="w-1/2 md:w-1/3">Total MRP</h4>
                    <h4>₹ <%= item.price %></h4>
                </div>
                <div class="flex gap-5 mt-2">
                    <h4 class="w-1/2 md:w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= item.discount %></h4>
                </div>
                <div class="flex gap-5 mt-2">
                    <h4 class="w-1/2 md:w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex gap-5 mt-2">
                    <h4 class="w-1/2 md:w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-2"></div>
            <div class="flex gap-5 mt-5">
                <h3 class="w-1/2 md:w-1/3 text-lg md:text-xl">Total Amount</h3>
                <h3 class="font-semibold text-lg md:text-xl text-green-600">₹ <%= bill %></h3>
            </div>
            <form action=""></form>
        </div>
    </div>
<% }) %>


    
<%- include('./partials/footer') %>