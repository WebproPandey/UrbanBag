<%- include('./partials/header') %>
<div class="w-full h-screen flex ">
    <div class="w-full flex items-center justify-evenly h-screen">
        <div class=" w-3/2  px-20  rounded-md relative bg-slate-400/30 py-10">
            <h4 class="text-2xl font-[500] capitalize mb-10  text-blue-500">Sign In </h4>
            <form action="/users/login" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] outline-none rounded-md mb-5 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] outline-none  rounded-md mb-5 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input class="w-full block rounded-md  py-2 mt-2 bg-blue-500 text-white" type="submit"
                    value="Login">
            </form>
            <!-- Add the 'Create Account' link below the form -->
            <div class="w-full text-center   flex justify-center items-center  mt-[2rem] ">
                <p class="text-[1rem] ">You have Account ?</p>
                <a href="/users/register" class="text-[1rem] font-[500] underline ">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>